{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"prettier",
		"plugin:prettier/recommended",
		"plugin:jest/recommended"
	],
	"plugins": ["jest"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"prettier/prettier": "error",
		"no-unused-vars": "error",
		"no-param-reassign": "error",
		"array-callback-return": "warn",
		"sort-keys": "error"
	}
}
